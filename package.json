{
  "name": "note-next",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"{app,components}/**/*.{ts,tsx}\"",
    "db:gen": "dotenv -e .env.development -- drizzle-kit generate:pg",
    "db:push": "dotenv -e .env.development -- drizzle-kit push:pg",
    "db:seed": "dotenv -e .env.development -- ts-node db/seed.ts",
    "db:migrate": "dotenv -e .env.development -- ts-node db/migrate.ts",
    "db:drop-migration": "dotenv -e .env.development -- drizzle-kit drop",
    "db:studio": "dotenv -e .env.development -- drizzle-kit studio --port 5555 --verbose"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.3",
    "@kaiverse/k": "^0.6.0",
    "@tabler/icons-react": "^3.33.0",
    "@tiptap/extension-character-count": "^2.0.4",
    "@tiptap/extension-highlight": "^2.0.4",
    "@tiptap/extension-placeholder": "^2.0.4",
    "@tiptap/pm": "^2.0.4",
    "@tiptap/react": "^2.0.4",
    "@tiptap/starter-kit": "^2.0.4",
    "@upstash/ratelimit": "^0.4.3",
    "@vercel/analytics": "^1.0.1",
    "@vercel/functions": "^2.1.0",
    "@vercel/kv": "^0.2.2",
    "@vercel/postgres": "^0.4.0",
    "dayjs": "^1.11.9",
    "drizzle-orm": "^0.27.2",
    "next": "15.3.2",
    "next-auth": "5.0.0-beta.28",
    "next-intl": "4.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "^0.34.1",
    "swr": "^2.2.0",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@next/eslint-plugin-next": "^15.3.2",
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/typography": "^0.5.9",
    "@types/eslint": "^9.6.1",
    "@types/node": "22.15.19",
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "dotenv-cli": "^7.2.1",
    "drizzle-kit": "^0.19.5",
    "eslint": "9.27.0",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.1.0",
    "postcss": "8.5.3",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "4.1.7",
    "ts-node": "^10.9.1",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.4",
      "@types/react-dom": "19.1.5"
    }
  }
}